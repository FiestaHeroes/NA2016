open [TargetRegen]
    var num     0
        NPC     0.
    while num < 30
    open
        var MobIndex @RemoveFirst("NPCTargetCoord" " ")
            CoordX   @RemoveFirst("NPCTargetCoord" " ")
            CoordY   @RemoveFirst("NPCTargetCoord" " ").
        if CoordX === 0
        then open
            break "TargetRegen".
        close
        mobregen NPC MobIndex CoordX CoordY 0 1000 "Normal".
        num = num + 1.
    close
close

